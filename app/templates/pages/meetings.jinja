{#=====================================================
  Meetings list page
 
=====================================================#}

{% extends 'pages/base.jinja' %}

{% block title %}Meetings{% endblock %}

{% block content %}

<div class="container">  {#Picocss container#}

  <h1>Meetings</h1>

 {#New meeting Button#}
  <p>

    <a role="button" href="/meetings/new">New meeting</a>  {#Picocss Button#}

  </p>

 {#table wrapper (to be able to scroll on mobile devices)#}

  <div class="overflow-auto">  {#Picocss overflow#}

    <table class="striped">    {#Picocss table#}

      <thead>

        <tr>

          <th>ID</th>

          <th>Client ID</th>

          <th>Start</th>

          <th>Type</th>

          <th>Location</th>

          <th>Agenda</th>

        </tr>

      </thead>

      <tbody>

        {% if meetings and meetings|length %}

          {% for m in meetings %}

            {# m = one row from the meetings table #}
            <tr>

              <td>{{ m.id }}</td>

              <td>{{ m.client_id }}</td>

              <td>{{ m.start_at }}</td>

              <td>{{ m.meeting_type }}</td>

              <td>{{ m.location }}</td>

              <td>{{ m.agenda }}</td>

            </tr>

          {% endfor %}

        {% else %}

          <tr><td colspan="6"><em>You have no meetings.</em></td></tr>

        {% endif %}

      </tbody>

    </table>

  </div>

</div>

{% endblock %}