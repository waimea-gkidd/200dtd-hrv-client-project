{#=====================================================
  Meetings list page
  - Lists meetings passed in as 'meetings'
=====================================================#}

{% extends 'pages/base.jinja' %}

{% block title %}Meetings{% endblock %}

{% block content %}

<div class="container">

  <h1>Meetings</h1>

  <article>

    <ul>
      {% if meetings and meetings|length %} {# m in meetings simply means we are going through each meeting in the list one by one #}

        {% for m in meetings %}

          <li><a href="/meetings/{{ m.id }}">Meeting #{{ m.id }}</a></li>

        {% endfor %}

      {% else %}

        <p>You have no meetings!</p>

      {% endif %}

    </ul>

  </article>

