{#=====================================================
  Meetings list page
  - Lists meetings passed in as 'meetings'
=====================================================#}

{% extends 'pages/base.jinja' %}

{% block title %}Meetings{% endblock %}

{% block content %}

<div class="container">

  <h1>Meetings</h1>

  <article>

    <ul>
      {% if meetings and meetings|length %} {# m in meetings means we are selecting a single row #}

        {% for m in meetings %} 

          <li><a href="/meetings/{{ m.id }}">Meeting #{{ m.id }}</a></li>

        {% endfor %}

      {% else %}

        <p>You have no meetings!</p>

      {% endif %}

    </ul>

  </article>


  <article>
    <h3>Add a New meeting...</h3>
    <form action="/add" method="POST">
      <input type="text" name="name" placeholder="(needs replacement)">
      <button>Add the meeting</button>
    </form>
  </article>

</div>

{% endblock %}
