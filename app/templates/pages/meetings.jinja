{#=====================================================
  Meetings list
  - Same rhythm as Billy’s detail/list pages
  - Shows client name via simple LEFT JOIN in route
=====================================================#}
{% extends 'pages/base.jinja' %}
{% block title %}Meetings{% endblock %}

{% block content %}
  <h1>Meetings</h1>

  <p><a role="button" href="/meetings/new">Schedule Meeting</a></p>

  <div class="overflow-auto">
    <ul>
      {% for m in meetings %}
        <li>
          #{{ m.id }} — {{ m.date }} {{ m.time }} — {{ m.type }}
          — Client: {{ m.client_name or ('ID ' ~ m.client_id) }}
          — {{ m.location }} — {{ m.notes }}
        </li>
      {% else %}
        <li>No meetings yet.</li>
      {% endfor %}
    </ul>
  </div>
{% endblock %}
