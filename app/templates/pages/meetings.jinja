{% extends 'pages/base.jinja' %}

{% block title %} Meetings {% endblock %}

{% block content %}

  <h1>Meetings</h1>

  <div class="overflow-auto"> {# pico: Overflow auto #}

    <ul>
      {% for m in meetings %}
        <li>
          ID {{ m.id }} // Client {{ m.client_id }} // {{ m.date }} {{ m.time }} // {{ m.type }} // {{ m.location }} // {{ m.notes }}
        </li>

    
      {% endfor %}

    </ul>
  </div>

  <article>

    <h3>Add a New Meeting</h3>

    <form action="/meetings/add" method="POST">
    
      <input type="number" name="client_id" min="1" placeholder="Client ID (e.g. 1)" required>
      <input type="date"   name="date"   required>
      <input type="time"   name="time"   required>
      
      <select name="type">
        <option value=""> type </option>
        <option value="in-person">in-person</option>
        <option value="call">call</option>
        <option value="zoom">zoom</option>
      </select>

      <input type="text"   name="location" placeholder="Location or 'Phone'">
      <textarea name="notes" placeholder="Notes"></textarea>
      <button>Add Meeting</button>
    
    </form>

  </article>


{% endblock %}