{% extends 'pages/base.jinja' %}
{% block title %}HRV Client Tracker{% endblock %}

{% block content %}
  <h1>Home</h1>

  <p><strong>Total clients:</strong> {{ client_count }}</p>

  <h2>Recent clients</h2>
  <div class="overflow-auto"> {# Pico: overflow-auto #}
    <ul>
      {% for c in clients %}
        <li>{{ c.name }} — {{ c.phone }} — {{ c.email }} — {{ c.status }} — {{ c.notes }}</li>
      {% else %}
        <li>No clients yet.</li>
      {% endfor %}
    </ul>
  </div>

  <p>
    <a href="/clients">Clients</a> •
    <a href="/meetings">Meetings</a> •
    <a href="/follow-ups">Follow-ups</a>
  </p>
{% endblock %}
