{#=====================================================
  Home page
  - Hero style greeting banner
  - List of things passed in as 'things' array
  - Form for adding a new thing
=====================================================#}

{% extends 'pages/base.jinja' %}


{% block content %}

<main class="container">

{#Picocss heading#}

<h1>Dashboard</h1>

{#Picocss heading#}

<div class="grid">

<article>

 <h2>Clients</h2>

 <p>Total: {{ client_count }}</p>

</article>

<article>

  <h2>Follow-ups</h2>

  <p>Total: {{ followup_count }}</p>

</article>
    
<article>

  <h2>Tasks</h2>

  <p>Total: {{ task_count }}</p>

  </article>

</div>

{#Picocss table#}

 <h2>Recent Clients</h2>

  <table>

    <thead>

      <tr>
      
        <th>Name</th>

        <th>Phone</th>

        <th>Email</th>

        <th>Status</th>

        <th>Notes</th>

      </tr>

    </thead>

    <tbody>

      {% for client in clients %}

      <tr>

        <td>{{ client.name }}</td>

        <td>{{ client.phone }}</td>

        <td>{{ client.email }}</td>

        <td>{{ client.status }}</td>

        <td>{{ client.notes }}</td>

      </tr>

      {% endfor %}

    </tbody>

  </table>
   
{#Picocss button#}

  <a role="button" href="/clients/new">Add new client</a>

</main>

{% endblock %}


