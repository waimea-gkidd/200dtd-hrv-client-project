{#=====================================================
  Home page 
  -copied from Flask-intro home page
  -uses css overflow (which is a scrolling feature 
    for when info is too large to fit on a screen) 
  -shows the last 5 clients
=====================================================#}
{% extends 'pages/base.jinja' %}
{% block title %}HRV Client Tracker{% endblock %}

{% block content %}
  <h1>Home</h1>

  <p>
    <strong>Total clients:</strong> {{ client_count }}
    <strong>Follow-ups:</strong> {{ followups_count }}
    <strong>Tasks:</strong> {{ tasks_count }}
  </p>

  <h2>Recent Clients</h2>

  <div class="overflow-auto">

    <ul>
      {% for client in clients %}
        <li>{{ client.name }} — {{ client.phone }} — {{ client.email }} — {{ client.status }} — {{ client.notes }}</li>
      {% else %}
        <li>No clients yet.</li>
      {% endfor %}
    </ul>

  </div>

  <p>
    <a href="/clients">Clients</a>
    <a href="/meetings/new">Schedule Meeting</a>
    <a href="/follow-ups">Follow-ups</a>
  </p>

{% endblock %}