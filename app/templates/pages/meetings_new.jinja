{#=====================================================
 Add new Meetings list page
=====================================================#}

{% extends 'pages/base.jinja' %}

{% block title %}New Meeting{% endblock %}


{% block content %}

<div class="container">

  <h1>New Meeting</h1>

  {#Post to meetings#}
  <form method="post" action="/meetings">

    <label>

      Client ID

      <input name="client_id" type="number" min="1" placeholder="e.g. 1" required>

    </label>

    <label>

      Start (date & time)

      <input name="start_at" type="datetime-local" required>

    </label>

    <label>

      Meeting type

      <select name="meeting_type">

        <option value=""> select </option>

        <option value="in-person">in-person</option>

        <option value="call">call</option>

        <option value="facetime">facetime</option>

      </select>

    </label>

    <label>

      Location

      <input name="location" placeholder="e.g. 123 Example St ">

    </label>

    <label>

      Agenda

      <textarea name="agenda" rows="4" placeholder="What are we covering?"></textarea>

    </label>


    <p>

      <a role="button" class="secondary" href="/meetings/">Cancel</a>

      <button type="submit">Save</button>

    </p>

  </form>

</div>

{% endblock %}
