{% extends 'pages/base.jinja' %}

{% block title %}HRV Client Tracker - Follow-ups{% endblock %}

{% block content %}

  <h1>Follow-ups</h1>

  <div class="overflow-auto"> {# Pico Overflow auto #}

    <ul>
      {# for f in followups... same use of the grouping idea (makes things far easier to list) as the other pages #}
      {% for f in followups %}

        <li>
          Due {{ f.due_date }} — {{ f.priority }} — {{ f.status }} — {{ f.type }} — {{ f.notes }} — Client {{ f.client_id }}
        </li>

      {% else %}
        <p>You have no followups</p>
      {% endfor %}

    </ul>

  </div>

  <article>

    <h3>Add a New Follow-up</h3>

    {# coppied from "Things.jinja" #}
    <form action="/follow-ups/add" method="POST">
      <input  type="date"   name="due_date"   required>                         {# Pico: input  type=date #}
      <input  type="text"   name="priority"   placeholder="low/med/high">       {# Pico: input            #}
      <input  type="text"   name="status"     placeholder="open/done/...">      {# Pico: input            #}
      <input  type="text"   name="type"       placeholder="call/email/...">     {# Pico: input            #}
      <textarea name="notes" placeholder="Notes"></textarea>                    {# Pico: textarea         #}
      <input  type="number" name="client_id"  min="1" placeholder="Client ID" required> {# Pico: input type=number #}
      <button>Add Follow-up</button>                                            {# Pico: button           #}
    </form>

  </article>


{% endblock %}