{#=====================================================
  Clients
  - shows the list of clients
  - form to add a client
  - styling is PicoCSS classless (inputs/buttons)
=====================================================#}

{% extends 'pages/base.jinja' %}

{% block title %}
  HRV Client Tracker - Clients
{% endblock %}

{% block content %}

  <h1>Clients</h1>

  <article>
  
    <ul>
    
    
      {% for c in clients %}
        <li>{{ c.name }} // {{ c.phone }} // {{ c.email }} // {{ c.status }} // {{ c.notes }}</li>
      {% else %}
        <p>You have no clients.</p>
      {% endfor %}
      
    </ul>
    
  </article>

  <article>
  
    <h3>Add a New Client</h3>

    {#copied from flask to-do#}
    <form action="/clients/add" method="POST">
      <input type="text"   name="name"   placeholder="Client name"   required>   {#Pico: input#}
      <input type="text"   name="phone"  placeholder="Phone number">             {#Pico: input#}
      <input type="email"  name="email"  placeholder="Email address">            {#Pico: input#}
      <input type="text"   name="status" placeholder="Status (e.g. active)">     {#Pico: input#}
      <textarea name="notes" placeholder="Notes"></textarea>                      {#Pico: textarea#}
      <button>Add Client</button>                                                 {#Pico: button#}
    </form>
    
  </article>

{% endblock %}
