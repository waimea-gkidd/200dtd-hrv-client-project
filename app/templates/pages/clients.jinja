{#=====================================================
  Clients
  - shows the list of clients
  - form to add a client
  - styling is PicoCSS classless (inputs/buttons)
=====================================================#}

{% extends 'pages/base.jinja' %}

{% block title %}HRV Client Tracker - Clients{% endblock %}

{% block content %}
  <h1>Clients</h1>

  <div class="overflow-auto"> {# pico: Overflow auto #}

    <ul>
      {% for c in clients %}
        <li>{{ c.name }} // {{ c.phone }} // {{ c.email }} // {{ c.status }} // {{ c.notes }}</li>

      {% endfor %}
    </ul>

  </div>

  <article>

    <h3>Add a New Client</h3>

    <form action="/clients/add" method="POST"> 
      <input type="text"   name="name"   placeholder="Client name"   required>
      <input type="text"   name="phone"  placeholder="Phone number">
      <input type="email"  name="email"  placeholder="Email address">
      <input type="text"   name="status" placeholder="Status (e.g. active)">
      <textarea name="notes" placeholder="Notes"></textarea>
      <button>Add Client</button>

    </form>

  </article>

{% endblock %}