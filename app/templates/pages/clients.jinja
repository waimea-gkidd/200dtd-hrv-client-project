{#=====================================================
  Clients list
  - Adapted from Billy’s list page (home listing pieces)
=====================================================#}
{% extends 'pages/base.jinja' %}
{% block title %}Clients{% endblock %}

{% block content %}
  <h1>Clients</h1>

  <p><a role="button" href="/clients/new">Add Client</a></p> {# pattern: Billy's /new page link #}

  <div class="overflow-auto">
    <ul>
      {% for c in clients %}
        <li>
          #{{ c.id }} — {{ c.name }} — {{ c.phone }} — {{ c.email }} — {{ c.status }} — {{ c.notes }}
        </li>
      {% else %}
        <li>No clients yet.</li>
      {% endfor %}
    </ul>
  </div>
{% endblock %}
